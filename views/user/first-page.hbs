<div class="container-fluid">
    <div class="row">
        {{#each prod}}
        <div class="col-md-3 mt-5 p-5">
            <div>
                <div class="card mt-5 m-auto text-center" style="width: 18rem;">
                    <img class="card-img-top p-3 m-auto img-fluid" src="/shope-image/{{this._id}}.jpg"
                        alt="Card image cap" style="width: 400px; height: 200px;">
                    <div class="card-body">
                        <h5 class="card-title">{{this.pro.pname}}</h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of
                            the card's
                            content.</p>
                        <h4>Price : {{this.pro.pprice}}</h4>
                        <button class="btn btn-success" onclick="addcart('{{this._id}}')">Add To Cart</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


